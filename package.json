{
  "name": "comtravo",
  "version": "1.0.0",
  "description": "A project or coding challenge for comtravo design and implemented by Abdulraheem Sherif A",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc --project ./",
    "prestart": "npm run build",
    "start": "nodemon src/server.ts",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./src/test/jest-e2e.json",
    "test:e2e:watch": "jest --config ./apps/service/test/jest-e2e.json --detectOpenHandles --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adavuruku/comtravo.git"
  },
  "keywords": [
    "comtravo",
    "flight",
    "coding",
    "challenge"
  ],
  "author": "Abdulraheem Sherif Adavuruku",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adavuruku/comtravo/issues"
  },
  "homepage": "https://github.com/adavuruku/comtravo#readme",
  "dependencies": {
    "@types/node-cron": "^3.0.1",
    "axios": "^0.25.0",
    "concurrently": "^7.0.0",
    "dotenv": "^15.0.0",
    "express": "^4.17.2",
    "node-cron": "3.0.0",
    "tslint": "^6.1.3"
  },
  "devDependencies": {
    "@types/config": "0.0.41",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "config": "^3.3.7",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.4.0",
    "typescript": "4.3.5"
  }
}
